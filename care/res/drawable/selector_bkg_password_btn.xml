<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item  android:state_window_focused="true" android:state_pressed="true">
        <shape>
            <gradient 
                android:angle="270" 
                android:endColor="@color/gradient_red_end" 
                android:startColor="@color/gradient_red_start">                
            </gradient>
            <corners android:radius="8dp" />
            <stroke android:width="1px"  android:color="@color/roundCornerTableBorder" />
        </shape>
    </item>
    
    <item android:state_window_focused="false" >
        <shape>
            <solid android:color="@color/white"/>
            <corners android:radius="8dp" />
            <stroke android:width="1px"  android:color="@color/roundCornerTableBorder" />
        </shape>
    </item>

</selector>