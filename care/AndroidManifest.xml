<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thankcreate.care"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />    
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.thankcreate.care.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.thankcreate.care.ArrowsActivity" />
        <activity android:name="com.thankcreate.care.OptionsActivity" />
        <activity
            android:name="com.thankcreate.care.account.AccountActivity"
            android:label="@string/title_activity_account" >
        </activity>
        <activity
            android:name="com.thankcreate.care.status.StatusTimelineActivity"
            android:label="@string/title_activity_status_timeline" >
        </activity>
        <activity
            android:name="com.thankcreate.care.lab.LabActivity"
            android:label="@string/title_activity_lab" >
        </activity>
        <activity
            android:name="com.thankcreate.care.picture.PictureWallActivity"
            android:label="@string/title_activity_picture_wall" >
        </activity>
        <activity
            android:name="com.thankcreate.care.preference.PreferenceActivity"
            android:label="@string/title_activity_preference" >
        </activity>
    </application>

</manifest>